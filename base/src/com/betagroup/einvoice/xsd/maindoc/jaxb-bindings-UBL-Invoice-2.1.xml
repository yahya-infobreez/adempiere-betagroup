<jxb:bindings
    xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
    xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc"
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    jxb:version="2.1" jxb:extensionBindingPrefixes="xjc">
    
  
      <!-- Generate simple setters with primitive arguments -->
    <jxb:globalBindings>
        <xjc:simple />
    </jxb:globalBindings>
    <jxb:bindings schemaLocation="UBL-Invoice-2.1.xsd" node="/xsd:schema">
    
       <!-- Customize the main class to include @XmlRootElement. And sprcify a different name to avoid classname conflict -->
        <jxb:bindings node="//xsd:element[@name='Invoice']">
                 <jxb:javadoc>@XmlRootElement</jxb:javadoc>         
        </jxb:bindings>

  
    </jxb:bindings>
</jxb:bindings>